{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DeploymentExecution",
      "Effect": "Allow",
      "Action": [
        "cloudformation:UpdateStack",
        "cloudformation:DescribeStacks",
        "cloudformation:ExecuteChangeSet",
        "s3:PutObject",
        "s3:GetObject",
        "s3:ListBucket",
        "lambda:UpdateFunctionCode",
        "lambda:UpdateFunctionConfiguration"
      ],
      "Resource": "*"
    },
    {
      "Sid": "RestrictedPassRoleToServices",
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": [
        "arn:aws:iam::*:role/app-lambda-execution-role",
        "arn:aws:iam::*:role/app-ec2-execution-role"
      ],
      "Condition": {
        "StringEquals": {
          "iam:PassedToService": ["lambda.amazonaws.com", "ec2.amazonaws.com"]
        }
      }
    }
  ]
}
