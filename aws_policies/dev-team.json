{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DevS3Access",
      "Effect": "Allow",
      "Action": ["s3:PutObject", "s3:GetObject", "s3:ListBucket"],
      "Resource": [
        "arn:aws:s3:::dev-assets-bucket",
        "arn:aws:s3:::dev-assets-bucket/*"
      ]
    },
    {
      "Sid": "DevParameterStore",
      "Effect": "Allow",
      "Action": ["ssm:GetParametersByPath", "ssm:GetParameter"],
      "Resource": "arn:aws:ssm:*:*:parameter/dev/app/*"
    },
    {
      "Sid": "CloudWatchLogPush",
      "Effect": "Allow",
      "Action": ["logs:CreateLogStream", "logs:PutLogEvents"],
      "Resource": "arn:aws:logs:*:*:log-group:/aws/lambda/dev-app-*"
    }
  ]
}
