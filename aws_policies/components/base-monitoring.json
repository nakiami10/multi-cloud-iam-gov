{
  "Statement": [
    {
      "Sid": "StandardObservability",
      "Effect": "Allow",
      "Action": [
        "cloudwatch:Get*",
        "cloudwatch:List*",
        "logs:Describe*",
        "logs:GetLogEvents",
        "logs:FilterLogEvents"
      ],
      "Resource": "*"
    },
    {
      "Sid": "DatadogDiscovery",
      "Effect": "Allow",
      "Action": [
        "tag:GetResources",
        "ec2:DescribeTags",
        "rds:ListTagsForResource"
      ],
      "Resource": "*"
    }
  ]
}
