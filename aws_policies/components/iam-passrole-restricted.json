{
  "Statement": [
    {
      "Sid": "RestrictedPassRole",
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": [
        "arn:aws:iam::*:role/app-lambda-execution-role-*",
        "arn:aws:iam::*:role/app-ec2-execution-role-*",
        "arn:aws:iam::*:role/logging-standard-role"
      ],
      "Condition": {
        "StringEquals": {
          "iam:PassedToService": ["ec2.amazonaws.com", "lambda.amazonaws.com"]
        }
      }
    }
  ]
}
