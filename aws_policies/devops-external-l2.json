{
  "Statement": [
    {
      "Sid": "EC2ManagementNoDelete",
      "Description": "Allows management of EC2 instances and related resources, but restricts deletion of instances to prevent accidental loss of critical infrastructure.",
      "Effect": "Allow",
      "Action": [
        "ec2:RunInstances",
        "ec2:TerminateInstances",
        "ec2:StopInstances",
        "ec2:StartInstances",
        "ec2:ModifyInstanceAttribute",
        "ec2:DescribeInstances",
        "ec2:DescribeVpcs",
        "ec2:DescribeSubnets",
        "ec2:DescribeSecurityGroups",
        "ec2:CreateNetworkInterface",
        "ec2:AttachNetworkInterface",
        "ec2:CreateVpc",
        "ec2:CreateSubnet",
        "ec2:CreateSecurityGroup",
        "ec2:AuthorizeSecurityGroupIngress",
        "ec2:AuthorizeSecurityGroupEgress",
        "ec2:CreateRoute",
        "ec2:CreateInternetGateway",
        "ec2:AttachInternetGateway",
        "compute-optimizer:GetEC2RecommendationProjectedMetrics",
        "compute-optimizer:GetEC2RecommendationSummaries"
      ],
      "Resource": "*"
    },
    {
      "Sid": "RDSManagementNoDelete",
      "Description": "Allows management of RDS instances and related resources, but restricts deletion of instances to prevent accidental loss of critical databases.",
      "Effect": "Allow",
      "Action": [
        "rds:ModifyDBInstance",
        "rds:StartDBInstance",
        "rds:StopDBInstance",
        "rds:RebootDBInstance",
        "rds:CreateDBSnapshot"
      ],
      "Resource": "arn:aws:rds:*:*:db:*"
    },
    {
      "Sid": "LambdaManagement",
      "Effect": "Allow",
      "Action": [
        "lambda:CreateFunction",
        "lambda:UpdateFunctionCode",
        "lambda:UpdateFunctionConfiguration",
        "lambda:DeleteFunction",
        "lambda:InvokeFunction",
        "lambda:GetFunction",
        "lambda:ListFunctions",
        "lambda:PublishVersion",
        "lambda:AddPermission"
      ],
      "Resource": "*"
    },
    {
      "Sid": "GranularCloudFormation",
      "Effect": "Allow",
      "Action": [
        "cloudformation:CreateStack",
        "cloudformation:UpdateStack",
        "cloudformation:DescribeStacks",
        "cloudformation:GetTemplate",
        "cloudformation:ValidateTemplate"
      ],
      "Resource": "*"
    },
    {
      "Sid": "GranularELBAndAutoScaling",
      "Effect": "Allow",
      "Action": [
        "elasticloadbalancing:CreateLoadBalancer",
        "elasticloadbalancing:DeleteLoadBalancer",
        "elasticloadbalancing:DescribeLoadBalancers",
        "elasticloadbalancing:ModifyLoadBalancerAttributes",
        "elasticloadbalancing:CreateTargetGroup",
        "elasticloadbalancing:RegisterTargets",
        "autoscaling:CreateAutoScalingGroup",
        "autoscaling:UpdateAutoScalingGroup",
        "autoscaling:DeleteAutoScalingGroup",
        "autoscaling:DescribeAutoScalingGroups"
      ],
      "Resource": "*"
    },
    {
      "Sid": "GranularSQS",
      "Effect": "Allow",
      "Action": [
        "sqs:CreateQueue",
        "sqs:DeleteQueue",
        "sqs:SendMessage",
        "sqs:ReceiveMessage",
        "sqs:DeleteMessage",
        "sqs:GetQueueAttributes",
        "sqs:SetQueueAttributes",
        "sqs:ListQueues",
        "sqs:GetQueueUrl"
      ],
      "Resource": "*"
    },
    {
      "Sid": "GranularSNS",
      "Effect": "Allow",
      "Action": [
        "sns:CreateTopic",
        "sns:DeleteTopic",
        "sns:Subscribe",
        "sns:Unsubscribe",
        "sns:Publish",
        "sns:GetTopicAttributes",
        "sns:SetTopicAttributes",
        "sns:ListTopics"
      ],
      "Resource": "*"
    },
    {
      "Sid": "GranularApiGateway",
      "Effect": "Allow",
      "Action": [
        "apigateway:POST",
        "apigateway:GET",
        "apigateway:PUT",
        "apigateway:DELETE",
        "apigateway:PATCH",
        "apigateway:HEAD",
        "apigateway:OPTIONS",
        "apigateway:CreateRestApi",
        "apigateway:DeleteRestApi",
        "apigateway:UpdateRestApi",
        "apigateway:GetRestApi",
        "apigateway:CreateResource",
        "apigateway:DeleteResource",
        "apigateway:UpdateResource",
        "apigateway:GetResource",
        "apigateway:CreateMethod",
        "apigateway:DeleteMethod",
        "apigateway:UpdateMethod",
        "apigateway:GetMethod",
        "apigateway:CreateDeployment",
        "apigateway:DeleteDeployment",
        "apigateway:UpdateDeployment",
        "apigateway:GetDeployment"
      ],
      "Resource": "*"
    },
    {
      "Sid": "S3AppStorage",
      "Effect": "Allow",
      "Action": [
        "s3:CreateBucket",
        "s3:ListAllMyBuckets",
        "s3:GetBucketLocation",
        "s3:ListBucket",
        "s3:PutObject",
        "s3:GetObject",
        "s3:PutBucketVersioning",
        "s3:GetEncryptionConfiguration",
        "s3:PutEncryptionConfiguration",
        "s3:PutBucketPublicAccessBlock",
        "s3:GetBucketPublicAccessBlock",
        "s3:PutBucketWebsite",
        "s3:GetBucketWebsite",
        "s3:PutBucketTagging",
        "s3:GetBucketTagging"
      ],
      "Resource": "*"
    },
    {
      "Sid": "GranularBackupAndRecovery",
      "Effect": "Allow",
      "Action": [
        "backup:CreateBackupPlan",
        "backup:CreateBackupSelection",
        "backup:CreateBackupVault",
        "backup:StartBackupJob",
        "backup:StartRestoreJob",
        "backup:GetBackupPlan",
        "backup:ListBackupPlans",
        "backup:DescribeBackupVault",
        "backup:ListRecoveryPointsByBackupVault",
        "ec2:CreateSnapshot",
        "ec2:CreateSnapshots",
        "ec2:DeleteSnapshot",
        "ec2:DescribeSnapshots",
        "ec2:CopySnapshot",
        "rds:CopyDBSnapshot",
        "rds:DeleteDBSnapshot",
        "rds:RestoreDBInstanceFromDBSnapshot",
        "dynamodb:CreateBackup",
        "dynamodb:DeleteBackup",
        "dynamodb:DescribeBackup",
        "dynamodb:ListBackups",
        "dynamodb:RestoreTableFromBackup"
      ],
      "Resource": "*"
    },
    {
      "Sid": "MFAProtectedDelete",
      "Effect": "Allow",
      "Action": [
        "ec2:TerminateInstances",
        "rds:DeleteDBInstance",
        "s3:DeleteObject",
        "s3:DeleteBucket",
        "lambda:DeleteFunction",
        "cloudformation:DeleteStack"
      ],
      "Resource": "*",
      "Condition": {
        "Bool": {
          "aws:MultiFactorAuthPresent": "true"
        }
      }
    },
    {
      "Sid": "GranularKMS",
      "Effect": "Allow",
      "Action": [
        "kms:CreateKey",
        "kms:DescribeKey",
        "kms:EnableKey",
        "kms:DisableKey",
        "kms:ScheduleKeyDeletion",
        "kms:CancelKeyDeletion",
        "kms:ListKeys",
        "kms:ListAliases",
        "kms:CreateAlias",
        "kms:DeleteAlias",
        "kms:Encrypt",
        "kms:Decrypt",
        "kms:ReEncrypt*",
        "kms:GenerateDataKey*",
        "kms:TagResource",
        "kms:UntagResource"
      ],
      "Resource": "*"
    },
    {
      "Sid": "GranularSecretsManager",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:CreateSecret",
        "secretsmanager:DeleteSecret",
        "secretsmanager:DescribeSecret",
        "secretsmanager:GetSecretValue",
        "secretsmanager:UpdateSecret",
        "secretsmanager:ListSecrets"
      ],
      "Resource": "*"
    },
    {
      "Sid": "GranularBackupAndRecovery",
      "Effect": "Allow",
      "Action": [
        "backup:CreateBackupPlan",
        "backup:CreateBackupSelection",
        "backup:CreateBackupVault",
        "backup:StartBackupJob",
        "backup:StartRestoreJob",
        "backup:GetBackupPlan",
        "backup:ListBackupPlans",
        "backup:DescribeBackupVault",
        "backup:ListRecoveryPointsByBackupVault",
        "ec2:CreateSnapshot",
        "ec2:CreateSnapshots",
        "ec2:DeleteSnapshot",
        "ec2:DescribeSnapshots",
        "ec2:CopySnapshot",
        "rds:CopyDBSnapshot",
        "rds:DeleteDBSnapshot",
        "rds:RestoreDBInstanceFromDBSnapshot",
        "dynamodb:CreateBackup",
        "dynamodb:DeleteBackup",
        "dynamodb:DescribeBackup",
        "dynamodb:ListBackups",
        "dynamodb:RestoreTableFromBackup"
      ],
      "Resource": "*"
    },
    {
      "Sid": "CloudWatchAppInsights",
      "Effect": "Allow",
      "Action": [
        "applicationinsights:*",
        "pi:*",
        "health:*",
        "cloudtrail:List*",
        "cloudtrail:Describe*",
        "cloudtrail:Get*",
        "cloudtrail:Lookup*",
        "cloudtrail:AddTags",
        "cloudtrail:Start*",
        "cloudtrail:Search*",
        "cloudtrail:Generate*"
      ],
      "Resource": "*"
    }
  ]
}
