{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "OperationalAccess",
      "Effect": "Allow",
      "Action": [
        "ec2:Describe*",
        "ec2:Get*",
        "ec2:Create*",
        "ec2:RunInstances",
        "ec2:StartInstances",
        "ec2:StopInstances",
        "ec2:RebootInstances",
        "ec2:Modify*",
        "ec2:Attach*",
        "ec2:Associate*",
        "ec2:Disassociate*",
        "elasticloadbalancing:Create*",
        "elasticloadbalancing:Modify*",
        "elasticloadbalancing:Register*",
        "elasticloadbalancing:Deregister*",
        "elasticloadbalancing:Describe*",
        "autoscaling:Create*",
        "autoscaling:Update*",
        "autoscaling:Set*",
        "autoscaling:Describe*",
        "rds:Describe*",
        "rds:List*",
        "rds:Create*",
        "rds:Modify*",
        "rds:Start*",
        "rds:Stop*",
        "rds:Reboot*",
        "rds:Restore*",
        "rds:Copy*",
        "rds:AddTagsToResource",
        "rds:RemoveTagsFromResource",
        "lambda:Create*",
        "lambda:Update*",
        "lambda:Get*",
        "lambda:List*",
        "lambda:InvokeFunction",
        "lambda:PublishVersion",
        "lambda:AddPermission",
        "lambda:RemovePermission",
        "cloudformation:Create*",
        "cloudformation:Update*",
        "cloudformation:Describe*",
        "cloudformation:Get*",
        "cloudformation:List*",
        "cloudformation:ValidateTemplate",
        "cloudformation:ExecuteChangeSet",
        "logs:Create*",
        "logs:Put*",
        "logs:Get*",
        "logs:Describe*",
        "logs:FilterLogEvents",
        "logs:DeleteSubscriptionFilter",
        "logs:DeleteMetricFilter",
        "s3:CreateBucket",
        "s3:List*",
        "s3:Get*",
        "s3:Put*",
        "s3:AbortMultipartUpload",
        "s3:RestoreObject",
        "s3-object-lambda:Get*",
        "s3-object-lambda:List*",
        "sqs:CreateQueue",
        "sqs:List*",
        "sqs:Get*",
        "sqs:Set*",
        "sqs:SendMessage",
        "sqs:ReceiveMessage",
        "sqs:DeleteMessage",
        "sns:CreateTopic",
        "sns:Get*",
        "sns:List*",
        "sns:Set*",
        "sns:Publish",
        "sns:Subscribe",
        "sns:Unsubscribe",
        "apigateway:GET",
        "apigateway:POST",
        "apigateway:PUT",
        "apigateway:PATCH",
        "apigateway:HEAD",
        "apigateway:OPTIONS",
        "ssm:Describe*",
        "ssm:Get*",
        "ssm:List*",
        "ssm:Create*",
        "ssm:Update*",
        "ssm:Put*",
        "ssm:SendCommand",
        "ssm:StartSession",
        "ssm:ResumeSession",
        "ssm:TerminateSession",
        "ssmmessages:CreateControlChannel",
        "ssmmessages:CreateDataChannel",
        "ssmmessages:OpenControlChannel",
        "ssmmessages:OpenDataChannel",
        "ec2messages:AcknowledgeMessage",
        "ec2messages:Get*",
        "ec2messages:SendReply",
        "backup:Create*",
        "backup:Start*",
        "backup:Get*",
        "backup:List*",
        "backup:Describe*",
        "backup:Restore*",
        "dynamodb:CreateBackup",
        "dynamodb:Describe*",
        "dynamodb:List*",
        "dynamodb:RestoreTableFromBackup",
        "compute-optimizer:Get*",
        "cloudtrail:Describe*",
        "cloudtrail:Get*",
        "cloudtrail:List*",
        "cloudtrail:Lookup*",
        "applicationinsights:*",
        "pi:*",
        "health:*",
        "kms:Describe*",
        "kms:Get*",
        "kms:List*",
        "kms:CreateAlias",
        "kms:UpdateAlias",
        "kms:Encrypt",
        "kms:Decrypt",
        "kms:ReEncrypt*",
        "kms:GenerateDataKey*",
        "kms:TagResource",
        "kms:UntagResource",
        "secretsmanager:CreateSecret",
        "secretsmanager:Get*",
        "secretsmanager:List*",
        "secretsmanager:Describe*",
        "secretsmanager:PutSecretValue",
        "secretsmanager:UpdateSecret",
        "secretsmanager:TagResource",
        "secretsmanager:UntagResource",
        "iam:Get*",
        "iam:List*",
        "iam:PassRole",
        "iam:CreateServiceLinkedRole"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowMFAProtectedOperationalDeletes",
      "Effect": "Allow",
      "Action": [
        "ec2:TerminateInstances",
        "cloudformation:DeleteStack",
        "lambda:DeleteFunction",
        "sqs:DeleteQueue",
        "sns:DeleteTopic",
        "logs:DeleteLogGroup",
        "logs:DeleteLogStream"
      ],
      "Resource": "*",
      "Condition": {
        "Bool": {
          "aws:MultiFactorAuthPresent": "true"
        }
      }
    },
    {
      "Sid": "DenyOperationalDeletesWithoutMFA",
      "Effect": "Deny",
      "Action": [
        "ec2:TerminateInstances",
        "cloudformation:DeleteStack",
        "lambda:DeleteFunction",
        "sqs:DeleteQueue",
        "sns:DeleteTopic",
        "logs:DeleteLogGroup",
        "logs:DeleteLogStream"
      ],
      "Resource": "*",
      "Condition": {
        "BoolIfExists": {
          "aws:MultiFactorAuthPresent": "false"
        }
      }
    },
    {
      "Sid": "DenyCriticalDataAndCryptoDeletes",
      "Effect": "Deny",
      "Action": [
        "rds:DeleteDBInstance",
        "rds:DeleteDBCluster",
        "rds:DeleteDBSnapshot",
        "rds:DeleteDBClusterSnapshot",
        "s3:DeleteBucket",
        "s3:DeleteObject",
        "s3:DeleteObjectVersion",
        "kms:ScheduleKeyDeletion",
        "kms:DisableKey",
        "secretsmanager:DeleteSecret"
      ],
      "Resource": "*"
    },
    {
      "Sid": "DenyPrivilegeEscalationChanges",
      "Effect": "Deny",
      "Action": [
        "iam:CreateUser",
        "iam:DeleteUser",
        "iam:CreateRole",
        "iam:DeleteRole",
        "iam:AttachUserPolicy",
        "iam:AttachRolePolicy",
        "iam:DetachUserPolicy",
        "iam:DetachRolePolicy",
        "iam:PutUserPolicy",
        "iam:PutRolePolicy",
        "iam:DeleteUserPolicy",
        "iam:DeleteRolePolicy",
        "iam:CreatePolicy",
        "iam:CreatePolicyVersion",
        "iam:SetDefaultPolicyVersion",
        "iam:DeletePolicy",
        "iam:DeletePolicyVersion",
        "iam:UpdateAssumeRolePolicy"
      ],
      "Resource": "*"
    }
  ]
}
